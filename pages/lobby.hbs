<div class="lobby">
	<h1 class="gamename">Lobby of {{game}}</h1>

	<div class="players" id="players">
		{{#eachMap players}}
			{{> lobby-player name=key connected=value}}
		{{/eachMap}}
	</div>
	<div class="chat">
		<div id="chat" class="messages"></div>
		<form class="input-wrapper" data-event="chat" data-listen="submit">
			<input
					type="text"
					class="textfield"
					autocomplete="off"
					placeholder="Enter chat message"/>
		</form>
	</div>

	<div class="start-wrapper">
		<button class="btn {{#if enoughPlayers}}canstart{{/if}}" data-event="start">Start Game</button>
	</div>
</div>
