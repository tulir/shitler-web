<div class="game">
	<div id="status" class="status">The game is starting...</div>
	<div id="players" class="players">
		{{#eachMap players}}
			{{> player name=key role=value}}
		{{/eachMap}}
	</div>

	<div class="chat">
		<div id="chat" class="messages"></div>
		<form class="input-wrapper" data-event="chat" data-listen="submit">
			<input
					type="text"
					class="textfield"
					autocomplete="off"
					placeholder="Enter chat message"/>
		</form>
	</div>

	<div id="table" class="table">
		{{#if table}}
			{{> table table}}
		{{/if}}
	</div>

	<div id="votes" class="votes hidden">
		<div class="vote vote-ja" id="vote-ja" data-event="vote" data-vote="ja">Ja!</div>
		<div class="vote vote-nein" id="vote-nein" data-event="vote" data-vote="nein">Nein!</div>
	</div>
</div>
